<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hb_blur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="357dp"
                android:layout_height="295dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pizza_napolitaine" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProductDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Sicilian Pizza"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:max="5"
                    android:paddingTop="20sp"
                    android:rating="3.5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvProductDescriptionPara1"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_margin="15dp"
                android:layout_marginTop="-15sp"
                android:text="Pizza dough (type 0 or 00 tender wheat flour, Natural yeast, sour dough or brewer's yeast, sea salt, water), tomatoes (San Marzano or Pomodorino del Piennolo del Vesuvio), mozzarella (bufala Campana or fior di latte di agerola)"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients:"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="15dp"/>


            <TextView
                android:id="@+id/tvProductDescriptionPara2"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="0sp"
                android:text="Variations:	\n1.Pizza marinara,\n2.Pizza Margherita"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPriceDetail"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/llPriceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvProductDetailDiscount"
                        android:layout_width="122dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginBottom="0dp"
                        android:text="Price : $ 15.23"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvProductDetailPrice"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Discount: 3%"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="italic" />


                </LinearLayout>

                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="28sp"
                    android:backgroundTint="#712323"
                    android:gravity="center_horizontal"
                    android:text="add to cart"
                    app:iconTint="#911B1B" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</ScrollView>